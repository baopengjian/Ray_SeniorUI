<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.example.baopengjian.ray_seniorui.twenty_fifth.MyDrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--内容-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />
        <!--侧滑内容-->
        <com.example.baopengjian.ray_seniorui.twenty_fifth.MyDrawSlideBar
            android:layout_width="200dp"
            android:background="@drawable/main"
            android:gravity="center_vertical"
            android:layout_gravity="start"
            app:maxTranslationX="66dp"
            android:layout_height="match_parent">

            <TextView
                style="@style/MenuText"
                android:drawableLeft="@drawable/circle"
                android:text="朋友圈" />

            <TextView
                style="@style/MenuText"
                android:drawableLeft="@drawable/wallet"
                android:text="钱包" />

            <TextView
                style="@style/MenuText"
                android:drawableLeft="@drawable/coupon"
                android:text="优惠券" />

            <TextView
                style="@style/MenuText"
                android:drawableLeft="@drawable/friends"
                android:text="好友" />

            <TextView
                style="@style/MenuText"
                android:drawableLeft="@drawable/settings"
                android:text="设置" />

        </com.example.baopengjian.ray_seniorui.twenty_fifth.MyDrawSlideBar>
    </com.example.baopengjian.ray_seniorui.twenty_fifth.MyDrawerLayout>
</RelativeLayout>
